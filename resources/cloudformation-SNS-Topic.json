{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation template to create SNS Topics",
  "Parameters": {
    "DisplayName": {
      "Description": "The Name of the SNS Topic",
      "Type": "String"
    },
    "Subscription": {
      "Description": "The SNS Subscription ARN",
      "Type": "String"
    },
    "TopicName": {
      "Description": "Name of the Topic",
      "Type": "String"
    }
  },
  "Resources": {
    "Alarm": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : {"Ref": "DisplayName"},
        "TopicName" : {"Ref": "TopicName"}
      }
    }
  }
}
